<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/MainActivity"
    android:background="@drawable/leaves">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rectangle_7"
        android:weightSum="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rectangle_light_green">

        <TextView
            android:id="@+id/ingresa_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/txt_title_login"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/intel_regular"
            android:textSize="21sp"
            android:layout_weight="2"
            />

        <EditText
            android:id="@+id/input_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey"
            android:text="@string/input_user"
            android:fontFamily="@font/intel_regular"
            android:textColor="@color/gray"
            />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey"
            android:text="@string/input_pass"
            android:fontFamily="@font/intel_regular"
            android:textColor="@color/gray"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_green"
            android:text="@string/btn_login"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/intel_regular"
            android:textAllCaps="false"
            android:contentDescription="@string/button"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/txt_login_google"
                android:textColor="@color/black"
                android:fontFamily="@font/intel_regular"
                android:textSize="17sp"
                />

            <Button
                android:id="@+id/btn_login_google"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/google_log"
                android:textColor="@color/black"
                android:fontFamily="@font/intel_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/intel_regular"
                android:text="@string/txt_message_register"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:fontFamily="@font/intel_semibold"
                android:gravity="start|center"
                android:text="@string/btn_register"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>